<h2>注册</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "validate_form"}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
    <%= f.text_field :email, class: "validate[required] custom[email]" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: "validate[required, equals[user_password]]" %></div>

  <div><%= f.submit "注册" %></div>
<% end %>

<%= render "devise/shared/links" %>
